<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Breed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |a| %>
      <tr>
        <td><%= a.aname %></td>
        <td><%= a.breed.breed %></td>
        <td><%= link_to 'Show', a %></td>
        <td><%= link_to 'Edit', edit_animal_path(a) %></td>
        <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

